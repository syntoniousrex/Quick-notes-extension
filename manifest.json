{
  "manifest_version": 3,
  "name": "Quick notes",
  "description": "Quick Notes lets you jot and organize sticky notes directly in your browser.",
  "version": "1.0.0",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },

  "action": {
    "default_icon": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    },
    "default_title": "Quick notes",
    "default_popup" : "popup.html",
    "service_worker" : "background.js"
  },

  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "storage"
  ],

  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+U",
        "mac": "Command+U"
      }
    }
  }
}
